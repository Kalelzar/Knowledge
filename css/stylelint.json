{
    "extends": "stylelint-config-recommended",
    "rules": {
        "indentation": [
            2,
            {
                "message": "Please use 2 spaces for indentation.",
                "severity": "warning"
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["extend", "use", "include", "mixin"]
            }
        ]
    }
}
